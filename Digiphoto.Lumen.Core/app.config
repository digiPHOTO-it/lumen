<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString">
        <converter>
          <name value="folder"/>
          <type value="Digiphoto.Lumen.Util.SpecialFolderPatternConverter,Digiphoto.Lumen.Core"/>
        </converter>
        <conversionPattern value="%folder{LocalApplicationData}\digiPHOTO.it\Lumen\Log\lumenCore-log.txt"/>
      </file>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %thread %-5level %logger{1} - %message%newline"/>
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %thread %-5level %logger{1} - %message%newline"/>
      </layout>
    </appender>
    <appender name="NotifyAppender" type="Digiphoto.Lumen.Core.Util.Logging.NotifyAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %thread %-5level %logger{1} - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="NotifyAppender"/>
    </root>
  </log4net>

  <connectionStrings>

      <add name="LumenEntities"
           connectionString="metadata=res://*/LumenModel3.csdl|res://*/LumenModel3.ssdl|res://*/LumenModel3.msl;provider=System.Data.SQLite;provider connection string=&quot;data source=|DataDirectory|\database.sqlite;foreign keys=true;BinaryGuid=False&quot;"
           providerName="System.Data.EntityClient" />
    </connectionStrings>
       
    <startup>
  <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
</startup></configuration>
 