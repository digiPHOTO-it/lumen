<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ssc="clr-namespace:Digiphoto.Lumen.SelfService.Mobile.UI.Converters">

	<BitmapImage x:Key="italyFlag" UriSource="../Resources/Italy_Flag_32x32.png" />
	<BitmapImage x:Key="englandFlag" UriSource="../Resources/England_Flag_32x32.png" />
	<ssc:CompareConverter x:Key="compareConverter" />

	<Style x:Key="fasegiornoLabelStyle" TargetType="Label">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
	</Style>

	<Style x:Key="radioStyle" TargetType="RadioButton">
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="LayoutTransform">
			<Setter.Value>
				<ScaleTransform ScaleX="4" ScaleY="4" />
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>