
@model Digiphoto.Lumen.SelfService.WebUI.Models.Paniere

@{
	Layout = null;

	int totRighe = Model.listaFotografieDto.Length;
	int conta = 0;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Carrello Details</title>
</head>
<body>
	<div>
		<p>Dettaglio carrello</p>
		<dl class="dl-horizontal">
			<dt>
				ID: @Html.DisplayFor( model => model.carrelloDto.id )
			</dt>
			<dt>
				Titolo: @Html.DisplayFor( model => model.carrelloDto.titolo )
			</dt>
			<dt>
				Total righe: @totRighe
			</dt>
		</dl>
	</div>

	<div>
		<table>
			<tbody>

				@foreach( var item in Model.listaFotografieDto ) {
					<tr>
						<td>
							@(conta = conta + 1)
							)
						</td>
						<td>
							@Html.DisplayFor( qq => item.id )
						</td>
						<td>
							@Html.ActionLink( "Scarica foto", "GetImage", "Carrello", new { fotografiaId = item.id }, null )
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<div>
		@Html.ActionLink( "Scarica ZIP", "ScaricareZip", "Carrello", new { id = Model.carrelloDto.id }, null )
	</div>

	<div>
		@Html.ActionLink( "Back to Index", "Index", "Home" )
	</div>

</body>
</html>
