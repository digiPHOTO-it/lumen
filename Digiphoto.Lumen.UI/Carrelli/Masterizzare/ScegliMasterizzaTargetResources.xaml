<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digiphoto.Lumen.UI.Carrelli.Masterizzare">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/Digiphoto.Lumen.UI;component/Resources/GlobalResourceDictionary.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="scegliMasterizzaTargetWindowStyle" TargetType="Window">
		<Setter Property="Background">
			<Setter.Value>
				<LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
					<GradientStop Color="DarkSlateGray" Offset="0" />
					<GradientStop Color="Black" Offset="1" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>

	</Style>

	<Style x:Key="colonneButtonStyle" TargetType="Button" BasedOn="{StaticResource buttonBaseStyle}">
		<Setter Property="Height" Value="60" />
		<Setter Property="Width" Value="200" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="FontSize" Value="20" />
	</Style>
</ResourceDictionary>