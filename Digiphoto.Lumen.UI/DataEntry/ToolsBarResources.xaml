<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/Digiphoto.Lumen.UI;component/Resources/GlobalResourceDictionary.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="buttonToolBarDEStyle" TargetType="Button" BasedOn="{StaticResource buttonBaseStyle}">
		<Setter Property="BorderBrush" Value="Gray" />
		<Setter Property="BorderThickness" Value="2 0 0 1" />
		<Setter Property="Margin" Value="1,0,0,0" />
	</Style>

	<Style x:Key="buttonSpostamentoDEStyle" TargetType="Button" BasedOn="{StaticResource buttonToolBarDEStyle}">
		<Setter Property="MinWidth" Value="30" />
	</Style>

	<Style x:Key="buttonStatoDEStyle" TargetType="Button" BasedOn="{StaticResource buttonToolBarDEStyle}">
		<Setter Property="MinWidth" Value="60" />
	</Style>

</ResourceDictionary>