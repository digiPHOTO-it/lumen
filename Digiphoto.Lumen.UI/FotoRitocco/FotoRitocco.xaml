<lumM:UserControlBase x:Class="Digiphoto.Lumen.UI.FotoRitocco.FotoRitocco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lum="clr-namespace:Digiphoto.Lumen.UI"
             xmlns:lumFR="clr-namespace:Digiphoto.Lumen.UI.FotoRitocco"
             xmlns:lumMS="clr-namespace:Digiphoto.Lumen.UI.Mvvm.MultiSelect"
             xmlns:lumM="clr-namespace:Digiphoto.Lumen.UI.Mvvm"
             xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
             mc:Ignorable="d" 
             x:Name="fotoRitoccoUserControl"
             d:DesignHeight="480" d:DesignWidth="640">

    <!-- Istanzio il controllore -->
    <lumM:UserControlBase.DataContext>
        <lumFR:FotoRitoccoViewModel />
    </lumM:UserControlBase.DataContext>
    
    <UserControl.Resources>
        <ResourceDictionary Source="FotoRitoccoResources.xaml" />
    </UserControl.Resources>



        <DockPanel LastChildFill="True">
                
        <StackPanel DockPanel.Dock="Right">  <!-- pulsantiera -->
            
            <Label Content="Luminosità" />
            <Slider Name="sliderLuminosita" ToolTip="Luminosità" Minimum="-1" Maximum="1" Value="0" ValueChanged="sliderLuminosita_ValueChanged" />

            <Label Content="Contrasto" />
            <Slider Name="sliderContrasto" ToolTip="Contrasto" Minimum="0" Maximum="2" Value="1" ValueChanged="sliderContrasto_ValueChanged" />

            <Label Content="Ruota" />
            <Slider Name="sliderRuota" ToolTip="Ruota" Minimum="-180" Maximum="180" ValueChanged="sliderRuota_ValueChanged" />

            <StackPanel Orientation="Horizontal">
                <Button Content="-90°" Command="{Binding ruotareCommand}" CommandParameter="-90" />
                <Button Content="+90°" Command="{Binding ruotareCommand}" CommandParameter="90" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ToggleButton Content="B/N" IsChecked="{Binding Path=isGrayscaleCheched}"  Command="{Binding grayScaleCommand}" CommandParameter="{Binding Path=IsChecked,RelativeSource={RelativeSource Self}}" />
                <ToggleButton Content="Sepia" IsChecked="{Binding Path=isSepiaCheched}" Command="{Binding sepiaCommand}" CommandParameter="{Binding Path=IsChecked,RelativeSource={RelativeSource Self}}" />                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Flip" Command="{Binding flipCommand}" />
                <Button Content="Crop" Command="{Binding croppareCommand}"/>
            </StackPanel>

            
            <Separator Height="10" />

            <ToggleButton Content="Selector" Name="toggleSelector" 
                          Checked="toggleSelector_Checked" Unchecked="toggleSelector_Unchecked" />
            
            
            <Separator Height="10" />
            
            <Button Content="Torna Orig" ToolTip="Torna Originale" 
                        Command="{Binding tornareOriginaleCommand}" />
            
            <Separator Height="20" />

            <Button Name="rifiutareCorrezioniButton" Content="Rifiuta" ToolTip="Annulla le correzioni applicate" Command="{Binding rifiutareCorrezioniCommand}"  />
            <Button Name="salvareCorrezioniButton" Content="Applica" ToolTip="Applica le correzioni apportate" Command="{Binding salvareCorrezioniCommand}"  />
            <Button Name="salvareMascheraButton" Content="Salva Msk" ToolTip="Salva la maschera" Click="salvareMascheraButton_Click" />
            <Button Name="buttonModificaConPrgEsterno" Content="Editor" ToolTip="Modifica le foto con un programma esterno" Command="{Binding modificareConEditorEsternoCommand}" />
            <Separator />
            <Button Content="+All" ToolTip="Mette tutte le foto in modifica" Command="{Binding commandRiempireElencoInModifica}" />
            <Button Content="-All" ToolTip="Toglie tutte le foto dalla modifica" Command="{Binding commandSvuotareElencoInModifica}" />
            <Button Content="Svuota lista" ToolTip="Svuota la lista delle foto in attesa di essere modificate" Command="{Binding svuotareListaDaModificareCommand}" />
            
        </StackPanel>

        <Expander DockPanel.Dock="Top"  Header="Maschere" ExpandDirection="Down" Name="expanderMaschere"> <!-- Maschere -->
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Expanded">
                    <i:InvokeCommandAction Command="{Binding caricareMaschereCommand}" CommandParameter="T"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="Collapsed">
                    <i:InvokeCommandAction Command="{Binding caricareMaschereCommand}" CommandParameter="N" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top">
                    <RadioButton Content="Vert"  Style="{StaticResource {x:Type ToggleButton}}" GroupName="groupMaskOrient" Command="{Binding caricareMaschereCommand}" CommandParameter="V" ToolTip="Filtra solo maschere verticali" />
                    <RadioButton Content="Horiz" Style="{StaticResource {x:Type ToggleButton}}" GroupName="groupMaskOrient" Command="{Binding caricareMaschereCommand}" CommandParameter="H" ToolTip="Filtra solo maschere orizzontali"/>
                    <Button Content="..." ToolTip="Carica maschera da un'altra cartella" Command="{Binding commandBrowseForFileCornice}" />
                </StackPanel>

                <ItemsControl Name="itemsContolMaschere" Grid.Row="0" Grid.Column="1"                               
                              ItemsSource="{Binding maschereCW}" 
                              ItemsPanel="{DynamicResource itemsPanelTemplateMaschere}" 
                              ItemTemplate="{DynamicResource itemTemplateThumbMaschera}"
                              />
            </Grid>

        </Expander>

       
        <!-- nastro basso con tutte le foto che sono in attesa di modifica -->
        <ListBox x:Name="listBoxImmaginiDaModificare"  DockPanel.Dock="Bottom"
                 SelectionMode="Multiple" lumMS:MultiSelect.IsEnabled="True" 
                 Style="{StaticResource listBoxImmaginiDaModificareStyle}"
                 ItemsSource="{Binding Path=fotografieDaModificareCW,Mode=TwoWay}" 
                 ItemsPanel="{DynamicResource immaginiDaModificareItemsPanelTemplate}" 
                 ItemTemplate="{DynamicResource immaginiDaModificareDataTemplate}"
                 IsSynchronizedWithCurrentItem="True"
                 AllowDrop="True"
                 IsEnabled="{Binding Path=listBoxImmaginiDaModificareEnabled, Converter={StaticResource boolInverterConverter}}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" Drop="listBoxImmaginiDaModificare_Drop">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="BorderBrush" Value="Green" />
                    <Setter Property="BorderThickness" Value="3" />
                    <!-- Questo evento serve per fare il drag della foto sulla cornice -->
                    <EventSetter Event="PreviewMouseDown" Handler="listBoxImmaginiDaModificare_PreviewMouseDown"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        
        
<!--
        <ItemsPanelTemplate>
            <UniformGrid />
        </ItemsPanelTemplate>
-->

        <Grid> <!-- area di lavoro per modifiche -->

                    <!-- Questo è il canvas di copertura dove compare la cornice bucata -->
                    <Canvas Name="canvasMskCopertura"
                            Visibility="{Binding isGestioneMaschereAttiva,Converter={StaticResource booleanToVisibilityConverter}}"
                            >
                        <Image Name="imageMask"  HorizontalAlignment="Left" VerticalAlignment="top"  
                               Width="500" Height="500" 
                               Source="{Binding mascheraAttiva}" />
                    </Canvas>
                
                    <!-- Questo è il canvas di lavoro, dove consento il drag-n-drop delle foto -->
                    <Canvas  Name="canvasMsk" Background="Transparent" AllowDrop="True" 
                             MouseDown="canvasMsk_MouseDown" Drop="canvasMsk_Drop"
                             Visibility="{Binding isGestioneMaschereAttiva,Converter={StaticResource booleanToVisibilityConverter}}"
                             />

            <!--
                 *******     ^ sopra gestione maschere  (fotoritocco singolo)
                 *********************************************************************
                 *******     V sotto gestione fotoritocco massivo
            -->
            
            
            <ItemsControl x:Name="itemsControlImmaginiInModifica"
                          Visibility="{Binding isGestioneMaschereDisattiva,Converter={StaticResource booleanToVisibilityConverter}}"
                          ItemsSource="{Binding ElementName=listBoxImmaginiDaModificare, Path=SelectedItems}" 
                          Background="Tomato"
                          VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" PreviewMouseDown="itemsControlImmaginiInModifica_PreviewMouseDown">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid  Background="DarkCyan"  />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Red">
                            <Image Name="imageModTemplate"
                                LayoutTransform="{Binding Path=DataContext.trasformazioneCorrente, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"  Source="{Binding Path=imgProvino,Converter={StaticResource immagineToImageSourceConverter}}"
                                Effect="{Binding Path=DataContext.effettoCorrente, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>


    </DockPanel>
    
</lumM:UserControlBase>
