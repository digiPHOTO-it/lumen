<lumM:UserControlBase x:Class="Digiphoto.Lumen.UI.FotoRitocco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lum="clr-namespace:Digiphoto.Lumen.UI"
             xmlns:lumMS="clr-namespace:Digiphoto.Lumen.UI.Mvvm.MultiSelect"
             xmlns:lumM="clr-namespace:Digiphoto.Lumen.UI.Mvvm"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">

    <!-- Istanzio il controllore -->
    <lumM:UserControlBase.DataContext>
        <lum:FotoRitoccoViewModel />
    </lumM:UserControlBase.DataContext>
    
    <UserControl.Resources>
        <ResourceDictionary Source="FotoRitoccoResources.xaml" />
    </UserControl.Resources>

    
    <DockPanel LastChildFill="True">
        
        
        <StackPanel DockPanel.Dock="Left">
            
            <Label Content="Luminosità" />
            <Slider Name="sliderLuminosita" ToolTip="Luminosità" Minimum="-1" Maximum="1" Value="0" ValueChanged="sliderLuminosita_ValueChanged" />

            <Label Content="Contrasto" />
            <Slider Name="sliderContrasto" ToolTip="Contrasto" Minimum="0" Maximum="2" Value="1.5" ValueChanged="sliderContrasto_ValueChanged" />

            <Label Content="Ruota" />
            <Slider ToolTip="Ruota" Minimum="-180" Maximum="180"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="-90°" Command="{Binding ruotareCommand}" CommandParameter="-90" />
                <Button Content="+90°" Command="{Binding ruotareCommand}" CommandParameter="90" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ToggleButton Content="B/N" Command="{Binding grayScaleCommand}" CommandParameter="{Binding Path=IsChecked,RelativeSource={RelativeSource Self}}" />
                <ToggleButton Content="Sepia" Command="{Binding sepiaCommand}" CommandParameter="{Binding Path=IsChecked,RelativeSource={RelativeSource Self}}" />                
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Flip" Command="{Binding flipCommand}" />
                <Button Content="Crop" Background="Red"/>
            </StackPanel>

            <Separator Height="10" />
            
            <Button Content="Torna Orig" ToolTip="Torna Originale" 
                        Command="{Binding tornareOriginaleCommand}" />
            
            <Separator Height="20" />

            <Button Name="rifiutareCorrezioniButton" Content="Rifiuta" ToolTip="Annulla le correzioni applicate" Command="{Binding rifiutareCorrezioniCommand}" />
            <Button Name="salvareCorrezioniButton" Content="Applica" ToolTip="Applica le correzioni apportate" Command="{Binding salvareCorrezioniCommand}"/>
            
        </StackPanel>

        
        

        <Expander DockPanel.Dock="Right"  Header="Cornici" MaxWidth="120" ExpandDirection="Left">
            <StackPanel Orientation="Vertical">

                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
                <Image Source="/Digiphoto.Lumen.UI;component/Resources/Printer-48x48.png" />
            </StackPanel>
        </Expander>

        <StackPanel DockPanel.Dock="Right">
            
            <Label Content="Didascalia" />
            <TextBox Name="didascaliaTextBox" />
            
            <Separator Margin="0,10"/>

            <GroupBox Header="Fasi del giorno">
                <ListBox ItemsSource="{Binding fasiDelGiorno}" 
                         SelectedItem="{Binding faseDelGiorno}" />
            </GroupBox>

            <Separator />
            
            <lum:SelettoreEvento x:Name="selettoreEvento4" />
            
            <Separator />

            <Button Content="Salva Metadati" Command="{Binding salvareMetadatiCommand}" />

        </StackPanel>

        
        <!-- nastro basso con tutte le foto che sono in attesa di modifica -->
        <ListBox x:Name="LsImmaginiDaModificare"  DockPanel.Dock="Bottom"
                 BorderBrush="Blue" BorderThickness="1"
                 MinHeight="60"
                 SelectionMode="Multiple" lumMS:MultiSelect.IsEnabled="True" 
                 Style="{StaticResource LsImmaginiDaModificareStyle}"
                 ItemsSource="{Binding Path=fotografieDaModificareCW}" 
                 ItemsPanel="{DynamicResource ImmaginiDaModificareItemsPanelTemplate}" 
                 ItemTemplate="{DynamicResource ImmaginiDaModificareDataTemplate}"
                 IsSynchronizedWithCurrentItem="True"
                 IsEnabled="{Binding Path=modificheInCorso, Converter={StaticResource boolInverterConverter}}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" >           
        </ListBox>

        
        
<!--
        <ItemsPanelTemplate>
            <UniformGrid />
        </ItemsPanelTemplate>
-->

        <ItemsControl x:Name="LsImmaginiInModifica"                    
                 ItemsSource="{Binding ElementName=LsImmaginiDaModificare, Path=SelectedItems}" 
                 VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                 >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid  Background="DarkCyan"  />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Red">
                        <Image Source="{Binding Path=imgProvino,Converter={StaticResource immagineToImageSourceConverter}}"
                               Effect="{Binding Path=DataContext.effettoCorrente, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </DockPanel>
    
</lumM:UserControlBase>
