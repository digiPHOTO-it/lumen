<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:lumP="clr-namespace:Digiphoto.Lumen.PresentationFramework.Converters;assembly=Digiphoto.Lumen.PresentationFramework"
					>

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/Digiphoto.Lumen.UI;component/Resources/GlobalResourceDictionary.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<lumP:EnumBooleanConverter x:Key="enumBooleanConverter" />

	<Style x:Key="modoRicRadioStyle" TargetType="RadioButton">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="Height" Value="30" />
		<Setter Property="BorderBrush" Value="AntiqueWhite" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="VerticalAlignment" Value="Top" />
	</Style>

	<Style x:Key="modoRicButtonStyle" TargetType="Button" BasedOn="{StaticResource buttonBaseStyle}">
		<Setter Property="Width" Value="120" />
		<Setter Property="Height" Value="44" />
	</Style>

	<Style x:Key="numRicStyle" TargetType="TextBox">
		<Setter Property="FontSize" Value="30" />
		<Setter Property="Height" Value="36" />
		<Setter Property="HorizontalContentAlignment" Value="Right" />
	</Style>

</ResourceDictionary>