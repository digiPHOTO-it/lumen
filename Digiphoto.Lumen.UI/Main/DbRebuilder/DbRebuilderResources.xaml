<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Digiphoto.Lumen.UI.Main" >

	<!-- includo le risorse globali -->
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/Digiphoto.Lumen.UI;component/Resources/GlobalResourceDictionary.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="labelNumStyle" TargetType="Label">
		<Setter Property="HorizontalContentAlignment" Value="Right" />
		<Setter Property="Background" Value="#eeefe6" />
		<Setter Property="Foreground" Value="DarkBlue" />
		<Setter Property="Height" Value="24" />
	</Style>

</ResourceDictionary>