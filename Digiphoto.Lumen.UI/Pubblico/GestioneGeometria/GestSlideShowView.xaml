<lumM:UserControlBase x:Class="Digiphoto.Lumen.UI.Pubblico.GestSlideShowView"
					  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
					  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
					  xmlns:lumM="clr-namespace:Digiphoto.Lumen.UI.Mvvm"
					  xmlns:lum="clr-namespace:Digiphoto.Lumen.UI.Pubblico"
					  mc:Ignorable="d" 
					  d:DesignHeight="800" d:DesignWidth="1020">

	<lumM:UserControlBase.DataContext>
		<lum:GestSlideShowViewModel />
	</lumM:UserControlBase.DataContext>

	<UserControl.Resources>
		<ResourceDictionary Source="GestSlideShowResources.xaml" />
	</UserControl.Resources>

	<DockPanel>
		<GroupBox Header="Comandi" DockPanel.Dock="Top">
			<Grid Height="60" Width="245">
				<Button Content="Salva" Height="23" HorizontalAlignment="Left" Margin="0,17,0,0" Name="buttonSalva" Command="{Binding Path=salvaCommand}" VerticalAlignment="Top" Width="75" />
				<Button Content="Ripristina" Height="23" HorizontalAlignment="Left" Margin="85,17,0,0" Name="buttonRipristina" Command="{Binding Path=ripristinaCommand}" VerticalAlignment="Top" Width="75" />
				<Button Content="Reset" Height="23" HorizontalAlignment="Left" Margin="170,17,0,0" Name="buttonReset" Command="{Binding Path=resetCommand}" VerticalAlignment="Top" Width="75" />
			</Grid>
		</GroupBox>
		<GroupBox Header="Posizione dello Slide Show sul Monitor" DockPanel.Dock="Bottom">
			<Grid DockPanel.Dock="Bottom">
				<Canvas Name="monitor" 
						VerticalAlignment="Center"
						HorizontalAlignment="Center" Margin="6,6,0,0" Opacity="1" Background="Blue" Loaded="Monitor_Loaded" MouseMove="Monitor_MouseMove" MouseLeave="Monitor_MouseLeave" MouseLeftButtonDown="Monitor_MouseLeftButtonDown"
						Height="{Binding Converter={StaticResource percentualeConverter},Path=cfg.screenHeight,ConverterParameter=25}" 
						Width="{Binding Converter={StaticResource percentualeConverter},Path=cfg.screenWidth,ConverterParameter=25}">
									
						<Border Name="slideShowIcon" BorderBrush="Silver" BorderThickness="1" Background="Black" 
								Canvas.Top="{Binding Converter={StaticResource percentualeConverterSlideY},Path=pSSG.slideTop,ConverterParameter=25,Mode=TwoWay}" 
								Canvas.Left="{Binding Converter={StaticResource percentualeConverterSlideX},Path=pSSG.slideLeft,ConverterParameter=25,Mode=TwoWay}" 
								Height="{Binding Converter={StaticResource percentualeConverter},Path=pSSG.slideHeight,ConverterParameter=25,Mode=TwoWay}" 
								Width="{Binding Converter={StaticResource percentualeConverter},Path=pSSG.slideWidth,ConverterParameter=25,Mode=TwoWay}"/>
				</Canvas>
				<TextBox Height="23" HorizontalAlignment="Left" Margin="97,24,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" Text="{Binding Path= pSSG.deviceEnum,Mode=TwoWay}" IsEnabled="False"/>
				<Label Content="Sul monitor" Height="28" HorizontalAlignment="Left" Margin="14,24,0,0" Name="label1" VerticalAlignment="Top" Width="69" />
				<CheckBox Content="Schermo Intero" IsChecked="{Binding Path=pSSG.fullScreen,Mode=TwoWay}" Height="16" HorizontalAlignment="Left" Margin="254,27,0,0" Name="checkBox1" VerticalAlignment="Top" Width="114" />
				<CheckBox Content="Clone Monitor" IsChecked="{Binding Path=pSSG.extendMonitor,Mode=TwoWay}" Height="16" HorizontalAlignment="Left" Margin="374,27,0,0" Name="checkBox2" VerticalAlignment="Top" Width="114" Command="{Binding extendMonitorCommand}" Visibility="Hidden"/>
			</Grid>
		</GroupBox>
	</DockPanel>
</lumM:UserControlBase>
