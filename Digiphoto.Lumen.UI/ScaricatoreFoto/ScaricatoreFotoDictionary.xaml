<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lum="clr-namespace:Digiphoto.Lumen.UI">

    <!-- 
        Questo template applica un SelettoreEvento ad una istanza della classe 
        SelettoreEventoViewModel visualizzata in questa finestra
    -->
    <DataTemplate DataType="{x:Type lum:SelettoreEventoViewModel}">
        <lum:SelettoreEvento />
    </DataTemplate>

</ResourceDictionary>